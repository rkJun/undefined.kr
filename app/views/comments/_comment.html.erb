<li id="comment_<%=comment.id %>">

  <%= comment.body %>
  <span class="label label-info"><%= time_ago_in_words(comment.created_at) %> ì „</span>
  
  <i class="fa fa-<%= comment.user.provider if comment.user.provider %>"></i>
  <a rel="tooltip" title="<%= comment.user.nickname if comment.user.nickname %>">
    <img  src="<%= comment.user.image if comment.user.image %>" style="height:30px" 
     class="img-circle" />
  </a>
  <span class="label label-primary"><%= comment.user.nickname if comment.user.nickname %></span>

  <%= link_to icon('remove-circle'), [comment.post, comment], method: :delete, remote: true, data: { confirm: "Are you sure?" } %>
</li>