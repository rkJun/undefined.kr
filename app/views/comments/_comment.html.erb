<div id="comment_<%=comment.id %>">
  <div class="row">
    <div class="col-md-1">
      <!-- <i class="fa fa-<%= comment.user.provider if comment.user.provider %>"></i> -->
      <a rel="tooltip" title="<%= comment.user.nickname if comment.user.nickname %>">
        <img  src="<%= comment.user.image if comment.user.image %>" style="height:50px" 
         class="img-rounded" />
      </a>
      
    </div>
    <div class="col-md-11">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <span class="label label-info">
            <i class="fa fa-user"></i> <%= comment.user.nickname if comment.user.nickname %></span>
            <span class="label label-info"><%= time_ago_in_words(comment.created_at) %> 전</span>

            <% if current_user == comment.user %>
              <span class="label label-info">
                삭제하기 <%= link_to icon('remove-circle'), [comment.post.user, comment.post, comment], method: :delete, remote: true, data: { confirm: "Are you sure?" } %>
              </span>
            <% end %>
          </h3>
        </div>
        <div class="panel-body">
           <%= markdown comment.body %>
        </div>
      </div>
    </div>
  </div>
</div>