<% comment = @post.comments.new %>
<% if current_user %>
  <div id="comments_form_<%=@post.id%>">
  <%= simple_form_for([@post.user, @post, comment], remote: true ) do | f | %>
    <div class='form-group'>
      <%= f.input :body, as: :pagedown, label: false, placeholder: 'Add a comment.',  input_html: { :preview => true, class: 'form-control', rows: 5 } %>
    </div>
    <%= f.button :submit, class: 'btn btn-default' %>
  <% end %>
  </div>
<% end %>
