<div class="row">
  <article class="col-md-12">
    <section>
    <h2>
    <img src="<%=@post.user.image%>" style="height:50px" class="img-rounded">
    <%= @post.title %>
    </h2>
    <p><%= @post.user.nickname %>, <%= I18n.l @post.created_at, format: :long_custom %> 작성
       <%= tag_icons @post.tag_list %></p>
    <hr>
    <p>
      <%= markdown @post.content %>
    </p>
    </section>
    <section class="col-md-6 hide">
    <h3><%= @post.title %> <small><%= tag_icons @post.tag_list %></small></span></h3>
    <p class="preline">
      <%= @post.content %>"
    </p>
    </section>

  </article>

</div>

 <%= link_to 'Edit', edit_bulletin_post_path(@post.bulletin, @post), class: 'btn btn-default' %>
<%= link_to 'Back', bulletin_posts_path, class: 'btn btn-default' %>

<%= render "comments/comments" %>