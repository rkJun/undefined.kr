<li id="post-<%= post.id%>">
  <!--<span class='label label-default'></span>-->
  <span class="picture"><%= image_tag post.user.image, alt: post.user.nickname %></span>
  <span class="title"><%= link_to post.title, post, 'data-no-turbolink'=> true  %></span>
  <span class="timestamp">
    <%= time_ago_in_words(post.created_at) %> <%= "ì „" %>
  </span>
  <span class="user">
    <%= link_to post.user.nickname, post.user %>
  </span>
  <span class="tag">
    <%= icon('tags') + ' ' + tag_icons(post.tag_list) %>
  </span>
</li>
